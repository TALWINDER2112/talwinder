<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UserFormLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">12sp</item>
        <item name="android:paddingBottom">12sp</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:textColor">@color/colorOwn</item>
    </style>

    <style name="UserButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">12sp</item>
        <item name="android:paddingBottom">12sp</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:textColor">@color/colorOwn</item>

    </style>

</resources>
